<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Delicius | Home</title>

    <!-- Custom fonts for this template-->
    <link href="/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/assets/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('partials/sidebar.ejs')%>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <%- include('partials/navbar.ejs')%>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <h1 class="h3 mb-4 text-gray-800">Checkout Page</h1>

                    <!-- Page Heading -->
                    <div class="row">
                        <div class="col-lg-6">

                            <form action="/success_checkout?qty=<%= data.qty %>&product_name=<%= data.product_name %>&product_id=<%= data.product_id %>&price=<%= data.price %>" method="POST">
                                <div class="card position-relative">
                                    <div class="card-header py-3">
                                        <h6 class="m-0 font-weight-bold text-primary">Konfirmasi Pembelian</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group">
                                            <label for="customer_name">Nama</label>
                                            <input type="text" name="customer_name" id="customer_name" class="form-control" placeholder="Masukkan nama anda.." required>  
                                        </div>
                                        <div class="form-group">
                                            <label for="address">Alamat</label>
                                            <input type="text" name="address" id="address" class="form-control" placeholder="Masukkan alamat anda.." required>  
                                        </div>
                                        <div class="form-group">
                                            <label for="email">Email</label>
                                            <input type="email" name="email" id="email" class="form-control" placeholder="Masukkan email anda.." required>  
                                        </div>
                                        <div class="form-group">
                                            <label for="phone">Nomor HP</label>
                                            <input type="text" name="phone" id="phone" class="form-control" placeholder="628926265512" required>  
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-success float-right">
                                            Konfirmasi
                                        </button>
                                    </div>
                                </div>
                            </form>
    
                        </div>
    
                        <div class="col-lg-4">
    
                            <div class="card position-relative">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Detail Pesanan</h6>
                                </div>
                                <div class="card-body">
                                    <table class="table table-borderless d-flex just">
                                        <tr>
                                            <td>Nama</td>
                                            <td colspan="2"><%= data.product_name %></td>
                                        </tr>
                                        <tr>
                                            <td>Jumlah</td>
                                            <td><%= data.qty %> PCS</td>
                                        </tr>
                                        <tr class="border-top">
                                            <td>Total Pembayaran</td>
                                            <td class="font-weight-bold">IDR <%= data.price %></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
    
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Acakoy Factory 2022</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <%- include('partials/footer.ejs') %>